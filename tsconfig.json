{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "composite": true,
        "baseUrl": ".",
        "typeRoots": [
            "types/",
            "node_modules/@types"
        ],
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2019",
        "outDir": "dist/",
        "rootDir": "./src"
    }
}
